description "Concourse Web"

start on runlevel [2345]
stop on shutdown

script
  exec /bin/bash << 'EOT'
  eval $(cat /etc/environment | sed 's/^export //')

%{ for key, value in environment_vars ~}
  export ${key}=${value}
%{ endfor ~}

  sudo -E /usr/local/concourse/bin/concourse web
  EOT
end script
