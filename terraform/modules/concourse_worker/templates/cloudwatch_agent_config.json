{
    "agent": {
        "metrics_collection_interval": 60,
        "run_as_user": "root"
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/var/log/messages",
                        "log_group_name": "${cloudwatch_log_group}",
                        "log_stream_name": "syslog-{instance_id}"
                    },
                    {
                        "file_path": "/var/log/concourse.log",
                        "log_group_name": "${cloudwatch_log_group}",
                        "log_stream_name": "concourse-{instance_id}"
                    }
                ]
            }
        }
    }
}
